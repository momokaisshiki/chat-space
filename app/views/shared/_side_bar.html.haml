.chat_side
  .chat_side__header
    .chat_side__header__user-name
      .chat_side__header__user-name__top-items
        .chat_side__header__user-name__top-items__name
          = current_user.name 
        .chat_side__header__user-name__top-items__icons
          =link_to new_group_path do
            = icon('fas', 'edit', class: "chat_side__header__user-name__top-items__icons__btn-edit")
          =link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: "chat_side__header__user-name__top-items__icons__btn-cog") 

  .chat_side__contents
    .chat_side__contents__group-list
      - current_user.groups.each do |group|
        .chat_side__contents__group-list__brock
          = link_to group_messages_path(group) do
            .chat_side__contents__group-list__brock__name 
              = group.name
              .chat_side__contents__group-list__brock__message 
                = group.show_last_message
              
  