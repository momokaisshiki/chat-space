.chat_main__contents__lists__name 
  = message.user.name
  %p.chat_main__contents__lists__name__date   
    = message.created_at.strftime("%Y年%m月%d日 %H時%M分")   
.lower-message
  - if message.content.present?
    %p.chat_main__contents__lists__name__talker 
      = message.content
  = image_tag message.image.url, class: 'lower-message__image' if message.image.present?

     
  
